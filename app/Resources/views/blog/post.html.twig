{% extends '::base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block page_title %}
    {% include 'index/page_title.html.twig' with {
    page_title: 'Blog « ' ~ post.theme.name ~ ' »',
    page_subtitle: 'Un espace d\'expression où divers thèmes holistiques sont abordés.',
    steps: [{
    url: null,
    name: 'Blog'
    }, {
    url: null,
    name: post.theme.name
    }]
    } %}
{% endblock %}

{% block content %}
<div class="container clearfix">

    <!-- Post Content
    ============================================= -->
    <div class="postcontent nobottommargin col_last clearfix">

        <div class="single-post nobottommargin">

            <!-- Single Post
            ============================================= -->
            <div class="entry clearfix">

                <!-- Entry Title
                ============================================= -->
                <div class="entry-title">
                    <h2>{{ post.title }}</h2>
                </div><!-- .entry-title end -->

                <!-- Entry Meta
                ============================================= -->
                <ul class="entry-meta clearfix">
                    <li><i class="icon-calendar3"></i> {{ post.date|date('d/m/Y') }}</li>
                    <li><a href="{{ path('qui-suis-je') }}"><i class="icon-user"></i> {{ post.author }}</a></li>
                    <li><i class="icon-folder-open"></i> <a href="{{ path('blog_index', {slugTheme: post.theme.slug}) }}">{{ post.theme.name }}</a></li>
                </ul><!-- .entry-meta end -->

                <!-- Entry Image
                ============================================= -->
                <div class="entry-image">
                    <a href="#"><img src="{{ asset('images/blog/' ~ post.image) }}" alt="{{ post.title }}"></a>
                </div><!-- .entry-image end -->

                <!-- Entry Content
                ============================================= -->
                <div class="entry-content notopmargin">

                    {{ post.content|raw }}

                    <div class="tagcloud clearfix bottommargin">
                        {% for tag in post.tags %}
                            <a href="#">{{ tag.name }}</a>
                        {% endfor %}
                    </div>

                </div>
            </div><!-- .entry end -->

            <!-- Post Navigation
            ============================================= -->
            <div class="post-navigation clearfix">

                <div class="col_half nobottommargin">
                    <a href="#">&lArr; This is a Standard post with a Slider Gallery</a>
                </div>

                <div class="col_half col_last tright nobottommargin">
                    <a href="#">This is an Embedded Audio Post &rArr;</a>
                </div>

            </div><!-- .post-navigation end -->

            <div class="line"></div>

            <!-- Post Author Info
            ============================================= -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Publié par <span><a href="{{ path('qui-suis-je') }}">Steve David</a></span></h3>
                </div>
                <div class="panel-body">
                    <div class="author-image">
                        <img src="{{ asset('images/steve.jpg') }}" alt="" class="img-circle">
                    </div>
